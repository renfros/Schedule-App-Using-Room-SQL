<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/mainYellow</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DatePickerStyle" parent="Theme.MaterialComponents.Light">

        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
        <item name= "materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>

    </style>

    <style name="DateDialogStyle" parent="ThemeOverlay.AppCompat.Dialog">

        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:colorControlActivated">@color/mainYellow</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/colorbrown</item>

    </style>

    <style name="TimePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/black</item>
        <item name="colorControlActivated">@color/mainYellow</item>
        <item name="android:textColorPrimary">@color/colorbrown</item>
        <item name="android:textColorSecondary">@color/colorbrown</item>
        <item name="android:windowBackground">#FFFFFF</item>

    </style>

    <style name="UserInputDialog" parent="ThemeOverlay.AppCompat.Dialog">

        <item name="android:colorAccent">@color/black</item>

    </style>

</resources>